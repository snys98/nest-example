{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "lib": [
            "esnext",
        ],
        "paths": {
            "@shared/*": [
                "src/shared/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "lib.dom.d.ts"
    ]
}